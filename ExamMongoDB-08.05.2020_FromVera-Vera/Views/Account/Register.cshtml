@model ExamMongoDB.Identity.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<link href="~/css/login_style.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="card-title text-center" style="font-weight:bold">@ViewData["Title"]</h1>
                    <form class="form-signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@

                        <div class="form-label-group">
                            <label asp-for="Username">Username </label>
                            <input asp-for="Username" id="inputUsername" class="form-control" placeholder="Type your chosen username here" required autofocus>
                            <span asp-validation-for="Username" class="text-danger"></span>

                        </div>


                        @*<div class="form-label-group">
                            <label asp-for="Fname">First Name </label>
                            <input asp-for="Fname" id="inputFname" class="form-control" placeholder="Type your first name here" required />
                            <span asp-validation-for="Fname" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="Lname">Last Name</label>
                            <input asp-for="Lname" id="inputLname" class="form-control" placeholder="Type your last name here" required />
                            <span asp-validation-for="Lname" class="text-danger"></span>
                        </div>*@

                        <div class="form-label-group">
                            <label asp-for="Email">Email Address</label>
                            <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="Enter valid email address here" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Password must be minimum 6 characters" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control" placeholder="Please enter your password again" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="reg" class="btn btn-lg btn-primary btn-block text-uppercase btn-outline-info " type="submit">
                            Register
                        </button>



                        <hr class="my-4">



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

